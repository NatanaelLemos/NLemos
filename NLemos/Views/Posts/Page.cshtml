@using System.Collections.Generic
@model IEnumerable<Post>

@Html.Partial("_Page", Model)

<ul class="pager">
    @if (ViewBag.PageNumber > 0)
    {
        <li class="previous">
            <a href="@(Url.Action("Page", "Posts", new {@id = (int)ViewBag.PageNumber - 1}))">&larr; Newer Posts</a>
        </li>
    }
    <li class="next">
        <a href="@(Url.Action("Page", "Posts", new {@id = (int)ViewBag.PageNumber + 1}))">Older Posts &rarr;</a>
    </li>
</ul>